b {
  font-family: "maven_probold";
  letter-spacing: -0.08em;
  margin: 0;
}

a {
  color: $linkColor;
  text-decoration: none;

  &:hover { color: $linkColorHover; }
}
h1, h2, h3, h4, h5, h6 {
  font-weight: 100;
  margin: 0;
}
h1 {
  font-size: 2.5em;
}
h2 {
  font-size: 2.4em;
}
h3 {
  font-size: 2em;
}
h4 {
  font-size: 1.80em;
}

h5 {
  font-size: 1.5em;
}

h6 {
  font-size: 1.25em;
}

.center {
	text-align: center;
}

p {
  font-size: 1em;
  margin: 0;
}

.text-body {
  color: $black;
}

.text-header {
  color: $white;
}

.text-accent-primary {
  color: $gray;
}

.text-accent-secondary {
  color: $grayLight;
}

.text-accent-tertiary {
  color: $grayLighter;
}

.text-accent-quartiary {
  color: $grayLightest;
}
