// Concerto 2 Palette
$concerto-blue-0:	#4491ba;
$concerto-blue-1:	#0099ff;
$concerto-blue-2: #006699;	// main Concerto blue
$concerto-blue-3: #2c6499;
$concerto-blue-4:	#003366;
$concerto-blue-5:	#0099cc;
$concerto-blue-6:	#b0d3f1;
$concerto-blue-7:	#dee7ee;
$concerto-blue-8: #e7f1f9;

// Grays
$black:             #000;
$grayDarkest:       lighten($black, 6%);
$grayDarker:        lighten($black, 12%);
$grayDark:          lighten($black, 20%);
$gray:              lighten($black, 40%);
$grayLight:         lighten($black, 60%);
$grayLighter:       lighten($black, 75%);
$grayLightest:      lighten($black, 90%);
$white:             #fff;

// Accent Colors
$blue:              #049CDB;
$blueDark:          #0064CD;
$green:             #46a546;
$red:               #9d261d;
$yellow:            #ffc40d;
$orange:            #f89406;
$pink:              #c3325f;
$purple:            #7a43b6;


// Links
$linkColor:         $concerto-blue-0;
$linkColorHover:    darken($linkColor, 15);


// TYPE:

$sans-headers: 		"Myriad Pro", Helvetica, Arial, sans-serif;
$sans-body: 		"Lucida Grande",Arial,sans-serif;
$serifFontFamily:   Georgia, "Times New Roman", Times, serif !default;
$monoFontFamily:    Menlo, Monaco, Consolas, "Courier New", monospace !default;
