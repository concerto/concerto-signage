// Concerto 2 Palette
$concerto-blue-0:	#FFF;
$concerto-blue-1:	#0099ff;
$concerto-blue-2: 	#006699;	// main Concerto blue
$concerto-blue-3:	#003366;
$concerto-blue-4:	#0099cc;
$concerto-blue-5:	#b0d3f1;
$concerto-blue-6:	#dee7ee;
$concerto-blue-7:   #e7f1f9;

// Grays
$black:             #000;
$grayDarker:        lighten($black, 15%);
$grayDark:          lighten($black, 25%);
$gray:              lighten($black, 50%);
$grayLight:         lighten($black, 75%);
$grayLighter:       lighten($black, 90%);
$grayLightest:      lighten($black, 95%);
$white:             #fff;

// Accent Colors
$blue:              #049CDB;
$blueDark:          #0064CD;
$green:             #46a546;
$red:               #9d261d;
$yellow:            #ffc40d;
$orange:            #f89406;
$pink:              #c3325f;
$purple:            #7a43b6;


// Links
$linkColor:         $concerto-blue-0;
$linkColorHover:    darken($linkColor, 15);


// TYPE:

$sans-headers: 		"Myriad Pro", Helvetica, Arial, sans-serif;
$sans-body: 		"Lucida Grande",Arial,sans-serif;
$serifFontFamily:   Georgia, "Times New Roman", Times, serif !default;
$monoFontFamily:    Menlo, Monaco, Consolas, "Courier New", monospace !default;
