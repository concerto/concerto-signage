body {
  background: #383d3f;
}

#page-content {
  background: $white;
}

.content {
  max-width: 980px;
  margin: 0 auto;
  padding: 0 1em;


  &.expose {
    padding: 45px 0 45px 0;
  }
}
.stripe {
  @include vertical-gradient($grayLightest, $white);
  border-top: solid 1px $white;
  width: 100%;

  &.blue-images {
    @include horizontal-gradient(#4c9ec7, $concerto-blue-2, '/assets/blue-images.png');

  }
}

.horizontal-rule {
  border-top: solid 1px $white;
  @include vertical-gradient(#f0f0f0, $white);
  background-size: 100px;
}

.expose-headline {
  h1 { margin-bottom: 0.27em; }
}

.block {

  &.white {
    background: $white;
  }
}


#footer {
  background: #383d3f;
  @include box-shadow(inset 0 2px 2px $grayDarkest);
  border-top: solid 1px #71adcb;
}

.default-padding {
  padding: 24px;
}
