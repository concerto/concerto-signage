.pure-menu.pure-menu-open, .pure-menu.pure-menu-horizontal li .pure-menu-children {
	background: none;
}

.main-nav {
  @include vertical-gradient($white, #ebebeb);
  border-bottom: solid 2px $white;
  @include clearfix();

  .pure-menu {
    a {
      padding: 32px 20px;
      color: $black;
      font-size: 1.3em;
    }
  }

  .pure-menu.pure-menu-horizontal > ul {
    height: auto;
    float: right;
  }

  .pure-menu.pure-menu-horizontal > .pure-menu-heading {
    padding: 32px 25px 8px 25px;
    padding-left: 0px;
  }

  #nav-search {
    background: $white;
    margin: 0px;

    input[type="search"] {
      padding: 32px 15px;
      margin: 2px;
      width: 350px;
      background: none;
      border: none;
      font-size: 1.6em;

      &:focus {
        outline: 0;
      }
    }
  }
}