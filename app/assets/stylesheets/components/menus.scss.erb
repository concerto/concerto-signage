.pure-menu.pure-menu-open, .pure-menu.pure-menu-horizontal li .pure-menu-children {
	background: none;
}

.main-nav {
  @include vertical-gradient($white, #ebebeb);
  border-bottom: solid 2px $white;
  @include clearfix();

  .pure-menu a {
    color: $black;
  }

  .pure-menu-horizontal a {
    padding: 32px 14px;
  }

  img.main-logo {
    width: 160px;
  }

  .pure-menu.pure-menu-horizontal > ul {
    height: auto;
    float: right;
  }

  .pure-menu li.active a {
    background: $white;
  }

  .pure-menu.pure-menu-horizontal > .pure-menu-heading {
    padding: 32px 25px 8px 25px;
    padding-left: 0px;
  }

  #nav-search {
    background: $white;
    margin: 0px;

    input[type="search"] {
      padding: 32px 15px;
      margin: 0px;
      width: 500px;
      background: none;
      border: none;
      font-size: 1.6em;

      &:focus {
        outline: 0;
      }
    }
  }
}

#full-main-menu {
  display: none;
}
