/* Desktops and laptops ----------- */
@media only screen and (min-width : 1224px) {
  .content.expose {
    padding: 85px 0px 135px 0px;
  }
  .expose-headline { 
  	width: 80%; 
  	margin: 0 auto; 
  }
}

@media only screen and (min-width: 900px) {
  .content {
    padding: 0 2em;
  }

  img.main-logo {
    width: 200px !important;
  }

  .main-nav .pure-menu a {
    font-size: 1.3em;
    padding: 32px 20px;
  }
}