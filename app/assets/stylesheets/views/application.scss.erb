body {
  background: $white;
}

.content {
	max-width: 980px;
  margin: 0 auto;
  padding: 0 2em;
}

b {
  font-family: "maven_probold";
}

.main-nav {
  @include vertical-gradient($white, #ebebeb);
  border-bottom: solid 3px $white;

  .pure-menu {
    a {
      padding: 40px 25px;
      color: $black;
    }
  }

  .pure-menu.pure-menu-horizontal > ul {
    height: auto;
  }

  .pure-menu.pure-menu-horizontal > .pure-menu-heading {
    padding: 0px 25px;
    padding-left: 0px;
  }
}