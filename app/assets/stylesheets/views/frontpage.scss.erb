.fp-header {
  padding-top: 80px !important;
  margin-bottom: 75px;

  .subheader {
    float:left;
    width:560px;

    .slogan {
      padding-top: 10px;
      line-height: 35px;
      color: #e2e2e2;
    }

    .download-btn {
      float:left;
      margin-top: 30px;
      color: $white;
      display: block;
      font-size: 20px;
      background-image: url("/assets/download-btn.png");
      background-repeat: no-repeat;
      background-position: center right;
      line-height: 66px;
      box-sizing: border-box;
      text-align: center;
      width: 275px;
      height: 66px;
    }

    .download-btn:hover {
      background-image: url("/assets/download-btn-hover.png") !important;
    }

    .download-details {
      float:left;
      display:block;
      margin-top: 30px;
      padding: 10px 0px 0px 15px;
    }
  }

  .concerto-screen {
    width: 380px;
    padding-left:40px;
    float:left;
  }

  .watchers {
    padding-left: 10px;
  }
}

.updates-bar {
  width: 100%;
  min-height: 70px;
  background-color: rgba(0,0,0,0.46);
  color:#ffffff;

  .github-latest {
    float: left;
    padding-top: 15px;
  }

  .updates-content {
    float: left;
    padding-top: 10px;
    padding-left: 20px;

    .updates-text {
      display: inline-block;
      vertical-align: top;
      padding: 15px 0px 0px 5px;

    }

    .announcements-content {
      padding-left: 80px;

      .announcements-text {
        display: inline-block;
        vertical-align: top;
        padding: 5px 0px 0px 20px;
      }
    }
  }
}

img.fp-graphics {
  margin: 75px 0px 75px 0px;
}

p.description {
  margin-top: 10px;
}

.gray {
  color: #cccccc !important;
}

.white {
  color: $white !important;
}


.large {
  font-size: 48px;
}

.medium {
  font-size: 30px;
}

.small {
  font-size: 16px;
}

.smallest {
  font-size: 14px !important;
}
